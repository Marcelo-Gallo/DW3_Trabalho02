<%- include('../_header', { title: title, userName: userName }) %>

<div class="row">
    <div class="col-xl-12">
        <h1 class="mt-4"><%= title %></h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active"><%= title %></li>
        </ol>
        
        <div class="mb-3 mt-3">
            <button type="button" class="btn btn-primary" onclick="window.location.href = '/fornecedores/insertFornecedor'">
                Novo Fornecedor
            </button>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Listagem de Fornecedores
            </div>
            
            <div class="card-body">
                <table id="example" class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Ação</th>
                            <th>ID</th>
                            <th>Nome Fantasia</th>
                            <th>Razão Social</th>
                            <th>CNPJ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data.registro && data.registro.length > 0) { %>
                            <% data.registro.forEach(function(fornecedor) { %>
                                <tr>
                                    <td>
                                        <a href="/fornecedores/viewFornecedor/<%= fornecedor.fornecedorid %>/v" class="btn btn-info btn-sm">Visualizar</a>
                                    </td>
                                    <td><%= fornecedor.fornecedorid %></td>
                                    <td><%= fornecedor.nomefantasia %></td>
                                    <td><%= fornecedor.razaosocial %></td>
                                    <td><%= fornecedor.cnpj %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center">Nenhum fornecedor encontrado.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../_footer') %>

