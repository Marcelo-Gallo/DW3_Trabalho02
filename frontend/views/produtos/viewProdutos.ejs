<%- include('../_header', { title: title, userName: userName }) %>

<div class="container-fluid px-4">
    <h1 class="mt-4"><%= (data && data.produtoid) ? 'Editar Produto' : 'Novo Produto' %></h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/produtos">Produtos</a></li>
        <li class="breadcrumb-item active">Formulário</li>
    </ol>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-box-open me-1"></i>
                    Dados do Produto
                </div>
                <div class="card-body">

                    <% if (typeof message !== 'undefined' && message) { %>
                        <div class="alert alert-danger"><%= message %></div>
                    <% } %>

                    <form method="POST" action="<%= data && data.produtoid ? '/produtos/update' : '/produtos/insert' %>">

                        <% if (data && data.produtoid) { %>
                            <input type="hidden" name="produtoid" value="<%= data.produtoid %>">
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label fw-bold text-end">ID Produto:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control-plaintext" value="<%= data.produtoid %>" readonly>
                                </div>
                            </div>
                        <% } %>

                        <div class="mb-3">
                            <label for="nome" class="form-label">Nome do Produto <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                <input type="text" class="form-control" id="nome" name="nome" 
                                       value="<%= data ? data.nome : '' %>" required autofocus>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="codigobarras" class="form-label">Código de Barras <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                <input type="text" class="form-control font-monospace" id="codigobarras" name="codigobarras" 
                                       value="<%= data ? data.codigobarras : '' %>" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="valorProduto" class="form-label">Valor Unitário (Custo) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input type="number" step="0.01" class="form-control" id="valorProduto" name="valorProduto" 
                                       
                                       value="<%= data ? (data.valorProduto || data.valorproduto) : '' %>" 
                                       
                                       required placeholder="0,00">
                            </div>
                            <div class="form-text">Este valor será usado automaticamente nos pedidos.</div>
                        </div>

                        <div class="mb-3">
                            <label for="fornecedorid" class="form-label">Fornecedor Principal <span class="text-danger">*</span></label>
                            <select class="form-select" id="fornecedorid" name="fornecedorid" required>
                                <option value="">Selecione o Fornecedor...</option>
                                <% if (typeof fornecedores !== 'undefined') { %>
                                    <% fornecedores.forEach(f => { %>
                                        
                                        <option value="<%= f.fornecedorid %>" 
                                            <%= (data && data.fornecedorid == f.fornecedorid) ? 'selected' : '' %>
                                            class="<%= f.removido ? 'text-danger fw-bold' : '' %>"
                                        >
                                            <%= f.nomefantasia %> <%= f.removido ? '(Excluído)' : '' %>
                                        </option>

                                    <% }); %>
                                <% } %>
                            </select>
                            <% if (data && data.fornecedor_removido) { %>
                                <div class="form-text text-danger">
                                    <i class="fas fa-exclamation-triangle"></i> Atenção: O fornecedor atual deste produto foi excluído.
                                </div>
                            <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="descricao" class="form-label">Descrição</label>
                            <textarea class="form-control" id="descricao" name="descricao" rows="3"><%= data ? data.descricao : '' %></textarea>
                        </div>

                        <hr>
                        <div class="d-flex justify-content-end gap-2">
                            <a href="/produtos" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Salvar Produto
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../_footer') %>