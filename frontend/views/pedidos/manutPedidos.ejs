<%- include('../_header', { title: title, userName: userName }) %>

    <div class="container-fluid px-4">
        <h1 class="mt-4">Pedidos de Compra</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active">Pedidos</li>
        </ol>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-shopping-cart me-1"></i>
                Listagem de Pedidos
            </div>
            <div class="card-body">

                <div class="row mb-3">
                    <div class="col-md-6">
                        <% if (isAdmin) { %>
                        <a href="/pedidos/novo" class="btn btn-success">
                            <i class="fas fa-plus"></i> Novo Pedido
                        </a>
                        <% } %>
                    </div>
                    <div class="col-md-6">
                        <% if (message) { %>
                            <div class="alert alert-warning p-2 m-0 text-center" role="alert">
                                <%= message %>
                            </div>
                            <% } %>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Número</th>
                                <th>Data</th>
                                <th>Valor Total</th>
                                <% if (isAdmin) { %>
                                <th class="text-center">Ações</th>
                                <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data && data.length> 0) { %>
                                <% data.forEach(p=> { %>
                                    <tr>
                                        <td>
                                            <%= p.pedidocompraid %>
                                        </td>
                                        <td><strong>
                                                <%= p.numero %>
                                            </strong></td>
                                        <td>
                                            <%= moment(p.datapedido).format('DD/MM/YYYY') %>
                                        </td>
                                        <td class="text-end">R$ <%= parseFloat(p.valortotal).toFixed(2).replace('.', ','
                                                ) %>
                                        </td>
                                        <% if (isAdmin) { %>
                                        <td class="text-center">
                                            <a href="/pedidos/edit/<%= p.pedidocompraid %>"
                                                class="btn btn-primary btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="/pedidos/delete/<%= p.pedidocompraid %>"
                                                class="btn btn-danger btn-sm"
                                                onclick="return confirm('Deseja remover o pedido <%= p.numero %>?');"
                                                title="Excluir">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                        <% } %>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="5" class="text-center text-muted p-4">Nenhum pedido
                                                    encontrado.</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include('../_footer') %>