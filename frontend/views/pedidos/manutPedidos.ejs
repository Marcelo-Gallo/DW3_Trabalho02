<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
</head>
<body>

<h1>Manutenção de Pedidos</h1>
<h3>Usuário: <%= userName %></h3>

<a href="/pedidos/novo">Cadastrar Novo Pedido</a>

<hr>

<% if (message) { %>
    <p style="color:red;"><%= message %></p>
<% } %>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>ID</th>
            <th>Número</th>
            <th>Data</th>
            <th>Valor Total</th>
            <th>Fornecedor</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        <% if (data && data.length > 0) { %>

            <% data.forEach(p => { %>
                <tr>
                    <td><%= p.pedidocompraid %></td>
                    <td><%= p.numero %></td>
                    <td><%= moment(p.datapedido).format('DD/MM/YYYY') %></td>
                    <td>R$ <%= p.valortotal %></td>
                    <td><%= p.nomefantasia %></td> <td>
                        <a href="/pedidos/edit/<%= p.pedidocompraid %>">Editar</a>
                        &nbsp; | &nbsp;
                        <a href="/pedidos/delete/<%= p.pedidocompraid %>" onclick="return confirm('Deseja realmente remover?');">Excluir</a>
                    </td>
                </tr>
            <% }); %>

        <% } else { %>
            <tr>
                <td colspan="6">Nenhum pedido encontrado.</td>
            </tr>
        <% } %>
    </tbody>
</table>

</body>
</html>